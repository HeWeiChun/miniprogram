.goods-box .img-box {
  width: 105rpx;
  height: 105rpx;
}

.goods-box .img-box .image {
  width: 100rpx;
  height: 100rpx;
}



.goods-box .goods-info-box {
  width:80%;
  height: auto;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.goods-box .goods-info-box .goods-title_money 
{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #aaaaaa;
}


.goods-box .goods-info-box .goods-title_money  .goods-title {
  height: 60rpx;
  width: 70%;
  font-size: 38rpx;
  font-weight: 600;
  text-align: left;
  padding-top: 5rpx;
  color: black;
  align-items: center;
}
.goods-box .goods-info-box .goods-title_money  .goods-minPrice {
  font-size: 38rpx;
  text-align: right;
  font-weight: bold;
  align-items: center;
  color:  #ff4422;
}

.goods-box .goods-introduction {
  width: auto;
  height: auto;
  font-size: 28rpx;
  text-align: left;
  padding-top: 5rpx;
  color: dimgrey;
}




.goods-box .sellInformation {
  width: 430rpx;
  height: 45rpx;
  display: flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  color: gray;
  font-size: 22rpx;
}

.goods-box .sellInformation .goodsSoldNumber {
  width: 40%;
  padding: 5rpx 0;
  text-align: left;
}

.goods-box .sellInformation .goodsScore {
  overflow: hidden;
  width: 60%;
  padding: 5rpx 0;
  text-align: left;
}
