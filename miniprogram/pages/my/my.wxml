<!-- pages/user/index.wxml -->
<view class="user_info_wrap" style="height:50%">
  <view class="user_img_wrap">
    <image class="user_bg" style="left: 6%" src="{{userinfo.avatarUrl}}"></image>
    <view class="user_info">
      <image class="user_icon" src="{{userinfo.avatarUrl}}"></image>
      <view class="user_name">{{userinfo.nickName}}</view>
    </view>
  </view>
</view>
<view class="user_content">
  <view class="user_main">
    <!-- 应用信息相关 -->
    <view class="app_info_wrap">
      <view style="height: 10%"></view>
      <view class="app_info_item app_info_contact">
        <text>联系客服</text>
        <text>139****281</text>
      </view>
      <navigator url="/pages/feedback/index" class="app_info_item">设置</navigator>
      <view class="app_info_item">关于我们</view>
    </view>
    <!-- 推荐 -->
    <view class="recommend_wrap">把应用推荐给其他人</view>
  </view>
</view>